<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center"
            android:text="@string/fecDestete"
            android:textColor="@color/verdeOscuro"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/layout_animal_ternero_fecDestet"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center"
            android:text="destete"
            android:textSize="30sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center"
            android:text="@string/proposito"
            android:textColor="@color/verdeOscuro"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/layout_animal_ternero_proposito"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:gravity="center"
            android:text="propo"
            android:textSize="30sp" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>