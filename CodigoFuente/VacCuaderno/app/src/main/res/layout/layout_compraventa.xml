<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/layout_compraventa_crotal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/verde"
        android:gravity="center"
        android:text="ES123412341234"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_compraventa_crotal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center"
            android:text="@string/precio"
            android:textColor="@color/verdeOscuro"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/layout_compraventa_precio"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center"
            android:text="1200"
            android:textSize="30sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center"
            android:text="@string/fecha"
            android:textColor="@color/verdeOscuro"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/layout_compraventa_fecha"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:gravity="center"
            android:text="2020-10-24"
            android:textSize="30sp" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>